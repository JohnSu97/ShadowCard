{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist",
    "lib": ["dom", "esnext"],
    "rootDirs": ["src"],
    "declaration":true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./", // 使用paths时必须指定baseUrl
    "paths": {}
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
